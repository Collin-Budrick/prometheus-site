# Web
WEB_PORT=4173
# HMR (for HTTPS reverse proxies)
HMR_PROTOCOL=wss
HMR_HOST=prometheus.dev
HMR_CLIENT_PORT=443

# API
API_PORT=4000
API_HOST=0.0.0.0
API_URL=http://localhost:${API_PORT}

# Database
DATABASE_URL=postgresql://prometheus:secret@localhost:5433/prometheus
POSTGRES_USER=prometheus
POSTGRES_PASSWORD=secret
POSTGRES_DB=prometheus
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_SSL=false

# Valkey
VALKEY_HOST=localhost
VALKEY_PORT=6379

# Better Auth (secrets + OAuth)
BETTER_AUTH_COOKIE_SECRET=dev-cookie-secret
BETTER_AUTH_RP_ID=localhost
BETTER_AUTH_RP_ORIGIN=https://localhost:${WEB_PORT}
# Optional: Better Auth OAuth providers
BETTER_AUTH_GOOGLE_CLIENT_ID=
BETTER_AUTH_GOOGLE_CLIENT_SECRET=
BETTER_AUTH_GITHUB_CLIENT_ID=
BETTER_AUTH_GITHUB_CLIENT_SECRET=
BETTER_AUTH_APPLE_CLIENT_ID=
BETTER_AUTH_APPLE_CLIENT_SECRET=
BETTER_AUTH_DISCORD_CLIENT_ID=
BETTER_AUTH_DISCORD_CLIENT_SECRET=
BETTER_AUTH_MICROSOFT_CLIENT_ID=
BETTER_AUTH_MICROSOFT_CLIENT_SECRET=

# Feature flags
ENABLE_PARTYTOWN=false

# Operational flags
# Run database migrations when the API boots
RUN_MIGRATIONS=true
# Serve built assets via Vite preview instead of the SSR entry point
VITE_PREVIEW=false
# Enable the code inspector overlay in dev
VITE_CODE_INSPECTOR=0
