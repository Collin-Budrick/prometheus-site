{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.3.5"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "test": "bun test tests",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:prepare": "RUN_MIGRATIONS=1 bun run src/db/prepare-cli.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@better-auth/oauth-provider": "^1.5.0-beta.2",
    "@better-auth/passkey": "^1.5.0-beta.2",
    "@valkey/client": "1.0.0",
    "better-auth": "^1.5.0-beta.2",
    "drizzle-orm": "1.0.0-beta.8-734e789",
    "drizzle-zod": "1.0.0-beta.8-734e789",
    "elysia": "1.4.19",
    "postgres": "3.4.7",
    "undici": "7.16.0",
    "zod": "4.4.0-canary.20251231T230035"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "bun-types": "1.3.6-canary.20251231T140709",
    "drizzle-kit": "1.0.0-beta.8-734e789",
    "oxfmt": "0.21.0",
    "oxlint": "1.36.0",
    "typescript": "6.0.0-dev.20251231"
  },
  "optionalDependencies": {
    "@oxlint/win32-arm64": "1.36.0"
  }
}