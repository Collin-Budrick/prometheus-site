{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "test": "bun test tests",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:prepare": "RUN_MIGRATIONS=1 bun run src/db/prepare-cli.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@valkey/client": "1.0.0",
    "drizzle-orm": "1.0.0-beta.3-bd1ec83",
    "elysia": "1.4.19",
    "postgres": "3.4.7",
    "undici": "7.16.0"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "bun-types": "1.3.5-canary.20251209T140747",
    "drizzle-kit": "1.0.0-beta.3-bd1ec83",
    "oxfmt": "0.18.0",
    "oxlint": "1.33.0",
    "typescript": "6.0.0-dev.20251216"
  }
}
