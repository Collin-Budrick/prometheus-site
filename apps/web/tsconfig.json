{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["bun-types", "node", "vite/client"],
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/web/src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
