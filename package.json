{
  "name": "prometheus-site",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.3.5",
  "description": "Performance-forward monorepo for Qwik frontend and Bun Elysia API services.",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "bun run --cwd apps/web dev",
    "dev:api": "bun run --cwd apps/api dev",
    "dev": "bun run scripts/dev.ts",
    "build:web": "bun run --cwd apps/web build",
    "build:api": "bun run --cwd apps/api build",
    "build": "bun run build:web && bun run build:api",
    "preview": "bun run scripts/preview.ts",
    "lint:api": "bun run --cwd apps/api lint",
    "lint:web": "bun run --cwd apps/web lint",
    "lint": "bun run lint:api && bun run lint:web",
    "typecheck": "bunx --bun tsc -p apps/api/tsconfig.json --noEmit && bunx --bun tsc -p apps/web/tsconfig.json --noEmit",
    "format": "bun run --cwd apps/api format",
    "test": "bun run --cwd apps/api test",
    "hooks:install": "git config core.hooksPath .githooks"
  },
  "optionalDependencies": {
    "@oxfmt/win32-arm64": "^0.21.0",
    "lefthook-windows-arm64": "2.0.13"
  },
  "devDependencies": {
    "@oxlint-tsgolint/linux-arm64": "^0.10.1",
    "@oxlint-tsgolint/win32-arm64": "^0.10.1",
    "@oxlint/win32-arm64": "^1.36.0",
    "@playwright/test": "^1.58.0-alpha-2026-01-04",
    "lefthook": "^2.0.13",
    "oxlint-tsgolint": "^0.10.1"
  }
}