{
  "name": "prometheus-site",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.3.5",
  "description": "Performance-forward monorepo for Bun Elysia API services.",
  "workspaces": [
    "apps/api"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/api dev",
    "build": "bun run --cwd apps/api build",
    "lint": "bun run --cwd apps/api lint",
    "typecheck": "bunx --bun tsc -p apps/api/tsconfig.json --noEmit",
    "format": "bun run --cwd apps/api format",
    "test": "bun run --cwd apps/api test",
    "hooks:install": "git config core.hooksPath .githooks"
  },
  "optionalDependencies": {
    "lefthook-windows-arm64": "2.0.13"
  },
  "devDependencies": {
    "lefthook": "^2.0.13"
  }
}
