{
  "name": "prometheus-site",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.3.5",
  "description": "Performance-forward monorepo for Qwik frontend and Bun Elysia API services.",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "bun run --cwd apps/web dev",
    "dev:api": "bun run --cwd apps/api dev",
    "dev": "bun run scripts/dev.ts",
    "build:web": "bun run --cwd apps/web build",
    "build:api": "bun run --cwd apps/api build",
    "build": "bun run build:web && bun run build:api",
    "preview": "bun run --cwd apps/web preview",
    "lint": "bun run --cwd apps/api lint",
    "typecheck": "bunx --bun tsc -p apps/api/tsconfig.json --noEmit",
    "format": "bun run --cwd apps/api format",
    "test": "bun run --cwd apps/api test",
    "hooks:install": "git config core.hooksPath .githooks"
  },
  "optionalDependencies": {
    "lefthook-windows-arm64": "2.0.13"
  },
  "devDependencies": {
    "lefthook": "^2.0.13"
  }
}
