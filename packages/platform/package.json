{
  "name": "@prometheus/platform",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.3.5"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "types": "./src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/entrypoints/api.ts",
    "build": "bun build src/entrypoints/api.ts --target bun --outfile dist/index.js",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "test": "bun test tests",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:prepare": "RUN_MIGRATIONS=1 bun run src/db/prepare-cli.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@logtape/logtape": "^2.0.0-dev.479",
    "@prometheus/core": "workspace:*",
    "@prometheus/features-auth": "workspace:*",
    "@prometheus/features-messaging": "workspace:*",
    "@prometheus/features-store": "workspace:*",
    "@unkey/ratelimit": "2.1.4",
    "@valkey/client": "1.0.0",
    "arkenv": "0.9.0",
    "arktype": "2.1.29",
    "drizzle-orm": "1.0.0-beta.9-e89174b",
    "drizzle-zod": "1.0.0-beta.9-e89174b",
    "elysia": "1.4.22",
    "highlight.run": "9.25.0",
    "postgres": "3.4.8",
    "react": "19.3.0-canary-fd524fe0-20251121",
    "web-push": "^3.6.7",
    "zod": "4.4.0-canary.20251231T230035"
  },
  "devDependencies": {
    "@types/node": "25.0.9",
    "@types/react": "^19.2.8",
    "bun-types": "1.3.7-canary.20260119T141054",
    "drizzle-kit": "1.0.0-beta.9-e89174b",
    "oxfmt": "0.25.0",
    "oxlint": "1.40.0",
    "typescript": "6.0.0-dev.20260119"
  },
  "optionalDependencies": {
    "@oxlint/win32-arm64": "^1.40.0"
  }
}
